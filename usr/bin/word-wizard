#!/usr/bin/env python3

# Word Wizard - German Vocabulary Learning App
# This is the executable entry point

import sys
import os

# Add the application directory to Python path
sys.path.insert(0, '/usr/share/word-wizard')

try:
    from word_wizard import WordWizardApp
    import tkinter as tk

    if __name__ == "__main__":
        root = tk.Tk()
        app = WordWizardApp(root)
        root.protocol("WM_DELETE_WINDOW", app.on_closing)
        root.mainloop()

except ImportError as e:
    print(f"Error: Could not import required modules: {e}")
    print("Please ensure the application is properly installed.")
    sys.exit(1)
except Exception as e:
    print(f"Error starting Word Wizard: {e}")
    sys.exit(1)
